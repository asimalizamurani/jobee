<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineJobs</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineJobs.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-lg">
            <div class="container">
                <a class="navbar-brand" href="/Home/Index">RSOFT IT</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse position-relative" id="navbarNav">
                    <button class="close-btn d-lg-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-label="Close">&times;</button>
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        @if (User.IsInRole("Applicant"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/ApplicantPanel/Index">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Vacancy/Index">Vacancies</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Applicant/Apply">Apply</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Interview/Index">Interviews</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Report/ApplicantReport">Reports</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Home/Help">Help</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Home/About">About</a>
                            </li>
                        }

                        @if (User.IsInRole("HR"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/User/HrPanel">Panel</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Applicant/Index">Applicants</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Vacancy/Index">Vacancies</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Interview/Index">Interviews</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Report/HRReport">Reports</a>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/User/AdminPanel">AdminPanel</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Applicant/Index">Applicants</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Vacancy/Index">Vacancies</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Interview/Index">Interviews</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Report/AdminReport">Reports</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/User/Manage">Users</a>
                            </li>
                        }

                        @if (User.IsInRole("Interviewer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/User/InterviewerPanel">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Vacancy/Index">Vacancies</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Applicant/Apply">Apply</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Interview/Index">Interviews</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Report/InterviewerReport">Reports</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Home/Help">Help</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Home/About">About</a>
                            </li>
                        }

                    </ul>
                    <div>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- Show Logout button if the user is logged in -->
                            <a href="/User/Logout" class="btn btn-primary" style="color: inherit; text-decoration: none;">Logout</a>
                        }
                        else
                        {
                            <!-- Show Login button if the user is logged out -->
                            <a href="/User/Login" class="btn btn-primary" style="color: inherit; text-decoration: none;">Login</a>
                        }
                    </div>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-white py-5">
        <div class="container">
            <div class="row">
                <!-- Company Info Section -->
                <div class="col-md-4 mb-4 mb-md-0">
                    <h5 class="text-uppercase">About Us</h5>
                    <p>
                        We provide top-notch software solutions, specializing in App Development, Web Development, and Digital Marketing.
                        Our team is committed to delivering high-quality services to help your business thrive in the digital world.
                    </p>
                </div>

                <!-- Services Section -->
                <div class="col-md-4 mb-4 mb-md-0">
                    <h5 class="text-uppercase">Services</h5>
                    <ul class="list-unstyled">
                        <li><a href="/Home/Index" class="text-white text-decoration-none">App Development</a></li>
                        <li><a href="/Vacancy/Index" class="text-white text-decoration-none">Web Development</a></li>
                        <li><a href="/Reports/ApplicantReport" class="text-white text-decoration-none">Digital Marketing</a></li>
                    </ul>
                </div>

                <!-- Contact & Social Media Section -->
                <div class="col-md-4">
                    <h5 class="text-uppercase">Contact Us</h5>
                    <ul class="list-unstyled">
                        <li>
                            <i class="bi bi-telephone-fill"></i> +9232-32923619
                        </li>
                        <li>
                            <i class="bi bi-envelope-fill"></i> asimalizamurani@gmail.com
                        </li>
                        <li>
                            <i class="bi bi-geo-alt-fill"></i> Block A5 Johar Square Johar Chowrangi
                        </li>
                    </ul>
                    <div class="d-flex justify-content-start">
                        <a href="https://www.facebook.com/profile.php?id=100073655423139" class="text-white mx-2"><i class="bi bi-facebook"></i></a>
                        <a href="https://discord.com" class="text-white mx-2"><i class="bi bi-discord"></i></a>
                        <a href="https://twitter.com" class="text-white mx-2"><i class="bi bi-twitter"></i></a>
                        <a href="https://github.com/asimalizamurani" class="text-white mx-2"><i class="bi bi-github"></i></a>
                        <a href="https://www.instagram.com/asimali2877" class="text-white mx-2"><i class="bi bi-instagram"></i></a>
                        <a href="https://www.linkedin.com/in/asimbaloch" class="text-white mx-2"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
            </div>

            <!-- Footer Bottom Section -->
            <hr class="my-4 border-white">
            <div class="d-flex justify-content-between align-items-center">
                <p class="text-sm text-white mb-0">© 2024 RSOFT IT™ - All Rights Reserved.</p>
                <ul class="list-unstyled d-flex mb-0">
                    <li><a href="/Home/Privacy" class="text-white text-decoration-none">Privacy Policy</a></li>
                    <li class="ms-3"><a href="/Home/Terms" class="text-white text-decoration-none">Terms & Conditions</a></li>
                </ul>
            </div>
        </div>
    </footer>

    <!-- Bootstrap Icons CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    
    <!-- Bootstrap Icons CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Include Font Awesome for social icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
