@model IEnumerable<jobee.Models.User>

@{
    ViewData["Title"] = "Manage Users";
}

<h2 class="mb-4">Manage Users</h2>

<!-- Table to display users -->
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col">Role</th>
            <th scope="col">Created At</th>
            <th scope="col" class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Select((value, index) => new { index, value }))
        {
            <tr>
                <td>@(user.index + 1)</td>
                <td>@user.value.Username</td>
                <td>@user.value.Email</td>
                <td>@user.value.Role</td>
                <td>@user.value.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td class="text-center">
                    <!-- Edit Button -->
                    <a href="@Url.Action("Edit", "User", new { id = user.value.Userid })" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <!-- Delete Button -->
                    <a href="@Url.Action("Delete", "User", new { id = user.value.Userid })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?')">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Create New User Button -->
<div class="text-right">
    <a href="@Url.Action("Register", "User")" class="btn btn-success btn-sm">
        <i class="bi bi-person-plus"></i> Create New User
    </a>
</div>