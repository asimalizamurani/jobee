@model jobee.Models.Vacancy

@{
    ViewData["Title"] = "Edit Vacancy";
}

<h1>Edit Vacancy</h1>

<!-- Form for editing vacancy -->
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="VacancyId" />
    
    <div class="form-group">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    
    <div class="form-group mt-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    
    <div class="form-group mt-3">
        <label asp-for="Department" class="form-label"></label>
        <input asp-for="Department" class="form-control" />
        <span asp-validation-for="Department" class="text-danger"></span>
    </div>
    
    <div class="form-group mt-3">
        <label asp-for="PositionsAvailable" class="form-label"></label>
        <input asp-for="PositionsAvailable" class="form-control" />
        <span asp-validation-for="PositionsAvailable" class="text-danger"></span>
    </div>
    
    <div class="form-group mt-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" class="form-control">
            <option value="Open">Open</option>
            <option value="Closed">Closed</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    
    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <!-- Include client-side validation -->
    <partial name="_ValidationScriptsPartial" />
}
