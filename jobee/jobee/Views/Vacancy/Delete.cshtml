@model jobee.Models.Vacancy

@{
    ViewData["Title"] = "Delete Vacancy";
}

<h1>Delete Vacancy</h1>

<div class="container mt-5">
    <div class="alert alert-warning">
        <h4>Are you sure you want to delete this vacancy?</h4>
        <p><strong>Title:</strong> @Model.Title</p>
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Department:</strong> @Model.Department</p>
        <p><strong>Positions Available:</strong> @Model.PositionsAvailable</p>
        <p><strong>Status:</strong> @Model.Status</p>
    </div>

    <form method="post">
        <input type="hidden" asp-for="VacancyId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
